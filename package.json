{
  "name": "gameov",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "preview": "vite preview",
    "test": "vitest --coverage",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md}\"",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format:fix": "prettier --write .",
    "test:ui": "vitest --coverage --ui"
  },
  "dependencies": {
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "husky": "^9.1.1",
    "jsdom": "^24.1.1",
    "lint-staged": "^15.2.7",
    "postcss": "^8",
    "prettier": "3.3.3",
    "sass": "^1.77.8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vitest": "^2.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.tsx": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "type": "module"
}
